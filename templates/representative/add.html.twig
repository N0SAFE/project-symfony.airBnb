{# body #}
{% block body %}
	{% include "global/navbar.html.twig" %}
	<div class="container d-flex flex-column">
		<form enctype="multipart/form-data">
			<div class="d-flex flex-row" style="height: 300px;">
				<div class="d-flex flex-column h-100" style="width: 100%;">
					<div style="width: 90%;">
                        <span>Nom</span>
						<div class="input-group mb-1">
							<input type="text" class="form-control" placeholder="nom" aria-label="last_name" name="last_name">
						</div>
					</div>
					<div style="width: 90%;">
                        <span>Prenom</span>
						<div class="input-group mb-1">
							<input type="text" class="form-control" placeholder="prenom" aria-label="first_name" name="first_name">
						</div>
					</div>
					<div style="width: 90%;">
                        <span>Email</span>
						<div class="input-group mb-1">
							<input type="text" class="form-control" placeholder="email" aria-label="Email" name="email">
						</div>
					</div>
				</div>
			</div>
			<button class="btn btn-success" id="button">
				<div>Mettre a jour les donn√©e</div>
				<div style="display: none;">
					<svg class="loadAnimationSpinner" width="46px" height="25px" viewbox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
						<circle class="loadAnimationPath" fill="none" stroke-width="6" stroke-linecap="round" cx="33" cy="33" r="30"></circle>
					</svg>
				</div>
			</button>
		</form>
		<div style="height: 70px; width: 100%; background: green; margin-top: 20px; display: flex; justify-content: center; align-items: center; border-radius: 10px; display: none;" id="div">
			<p style="color: white;" id="text">test</p>
		</div>
	</div>
	{% include "global/footer.html.twig" %}
{% endblock %}
{# end body #}


{# js #}
