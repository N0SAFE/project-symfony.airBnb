{% extends "base.html.twig" %}

{% block default_var %}{% endblock %}


{% set navbar_active = "mandataires" %}


{# head #}
{% block title %}
	titre de la page
{% endblock %}

{% block meta %}{% endblock %}

{% block stylesheets %}
	<link href="/global/style/style.css" rel="stylesheet" type="text/css">
	<link href="/global/style/loadAnimation.css" rel="stylesheet" type="text/css">
	<link href="/global/style/navbar.css" rel="stylesheet" type="text/css">
	<link href="/property/index.style.css" rel="stylesheet" type="text/css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block preload_js %}{% endblock %}
{# end head #}


{# body #}
{% block body %}
	{% include "global/navbar.html.twig" %}
	<div class="container d-flex flex-column">
		<form enctype="multipart/form-data">
			<div class="d-flex flex-row" style="height: 300px;">
				<div class="d-flex flex-column h-100" style="width: 100%;">
					<div style="width: 90%;">
						<span>Nom</span>
						<div class="input-group mb-1">
							<input type="text" class="form-control" placeholder="name" aria-label="name" name="last_name" value="{{ representative.lastName }}">
						</div>
					</div>
					<div style="width: 90%;">
						<span>Prenom</span>
						<div class="input-group mb-1">
							<input type="text" class="form-control" placeholder="address" aria-label="address" name="first_name" value="{{ representative.firstName }}">
						</div>
					</div>
					<div style="width: 90%;">
						<span>Email</span>
						<div class="input-group mb-1">
							<input type="text" class="form-control" placeholder="Email" aria-label="Email" name="email" value="{{ representative.email }}">
						</div>
					</div>
					<div style="width: 90%;">
						<span>Location gérées</span>
						<div class="input-group mb-1">
							<select multiple name="managedRent[]">
								{% for residence in residences %}
									<option value="{{ residence.val.id }}" {% if residence.selected %}selected{% endif %}>{{residence.val.name}} - {{residence.val.country}} ({{residence.val.zipCode}})</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<input name="id" value="{{representative.id}}" type="hidden">
				</div>
			</div>
			<button class="btn btn-success">Mettre a jour les données</button>
		</form>
	</div>
	{% include "global/footer.html.twig" %}
{% endblock %}
{# end body #}


{# js #}
{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script type="module" src="/representative/modify.js"></script>
{% endblock %}
{# end js #}

